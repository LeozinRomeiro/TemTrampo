@inherits LayoutComponentBase
<MudThemingProvider Theme="@customizacaoCores" />
<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudContainer MaxWidth="MaxWidth.Medium">
            <MudGrid Justify="Justify.Center" Style="align-items: center;">
                <MudItem xs="24" md="1">
                    <MudNavLink Class="d-flex justify-center align-items-center" Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Work" IconColor="@Color.Secondary" />
                </MudItem>
                <MudItem xs="12" md="2">
                    <MudText Typo="Typo.h5" Style="align-items: center;" Color="@Color.Secondary">TemTrampo</MudText>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudAppBar>
    <MudDrawer ClipMode="DrawerClipMode.Always" Elevation="2" Open="@drawerOpen" >
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mt-16 pa-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme customizacaoCores = new MudTheme()
        {
            Palette = new Palette()
            {
                Primary = Colors.Red.Darken4,
                Secondary = Colors.BlueGrey.Lighten5
            }
        };

    private bool drawerOpen = true;

    private async Task DrawerToggle()
    {
        drawerOpen = !drawerOpen;
        Console.WriteLine("teste"+drawerOpen.ToString());
    }
}