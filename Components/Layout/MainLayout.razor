@inherits LayoutComponentBase

<MudThemingProvider Theme="@customizacaoCores" />
<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudCardContent Class="d-flex align-items-center">
            <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Work" IconColor="@Color.Secondary" />
            <MudText Typo="Typo.h5" Class="ml-2 align-content-center" Color="@Color.Secondary">TemTrampo</MudText>
        </MudCardContent>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mt-16 pa-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    private MudTheme customizacaoCores = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = Colors.Red.Darken4,
            Secondary = Colors.BlueGrey.Lighten5
        }
    };
}